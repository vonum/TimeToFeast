<div class="container">

	<div class="row">
		<div class="col-sm-10">
		    <div class="panel panel-primary">
		      	<div class="panel-heading">Managers</div>
		      	<div class="panel-body">
		    		<table class = "table">
						<thead>
							<th>#</th>
							<th>Name</th>
							<th>Surname</th>
							<th>Email</th>
						</thead>
						<tbody>
						<% @managers.each_with_index do |man, idx| %>
							<tr>
								<td><%= idx + 1 %></td>
								<td><%= "#{man.name}" %></td> 
								<td><%= "#{man.surname}" %></td>
								<td><%= link_to "#{man.email}", manager_path(man) %></td>
								<td><%= link_to 'Edit', edit_manager_path(man) %> </td>
								<td><%= button_to 'Delete', manager_path(man), method: :delete, class: 'btn' %></td>
							</tr>
						<% end %>
						</tbody>
					</table>
		      	</div>
		      	<%= link_to 'Add manager', new_manager_path, class: "btn btn-info"%>
		    </div>
		</div>
	</div>
