<div class="container">

	<div class="row">
		<div class="col-sm-10">
			<h1>Reservations</h1>
		    <div class="panel panel-primary">
		      	<div class="panel-heading">Restaurant <%= " #{@restaurant.name}" %></div>
		      	<div class="panel-body">
		    		<table class = "table">
		    			<caption class="text-left"><%="Table #{@table.id}"%></caption>
						<thead>
							<th>#</th>
							<th>User</th>
							<th>Date</th>
							<th>Time</th>
						</thead>
						<tbody>
						<% @reservations.each_with_index do |res, idx| %>
							<tr>
								<td><%= idx + 1 %></td>
								<td><%= "#{res.user.name} #{res.user.surname}" %></td> 
								<td><%= "#{res.date}" %></td>
								<td><%= "#{res.start.strftime('%H:%M')} : #{res.finish.strftime('%H:%M')}" %></td>
							</tr>
						<% end %>
						</tbody>
					</table>
		      	</div>
		      	<% if user_signed_in? %>
			      	<% unless !current_user.admin %>
			      		<%= link_to 'Add restaurant', new_restaurant_path, class: "btn btn-info"%>
			      	<% end %>
		      	<% end %>
		    </div>
		</div>
	</div>
<div/>