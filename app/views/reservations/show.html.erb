<div class="container">

<h1>Reservation for:</h1>
<p><%= "#{@user.name} #{@user.surname}" %></p>

	<div class="row">
		<div class="col-sm-10">
		    <div class="panel panel-primary">
		      	<div class="panel-heading">Users</div>
		      	<div class="panel-body">
		    		<table class = "table">
						<thead>
							<th>#</th>
							<th>Email</th>
							<th>Name</th>
							<th>Surname</th>						
						</thead>
						<tbody>
						<% @users.each_with_index do |us, idx| %>
							<% unless us.admin %>
							<tr>
								<td><%= idx + 1 %></td>
								<td><%= link_to "#{us.email}", user_path(us) %></td> 
								<td><%= "#{us.name}" %></td>
								<td><%= "#{us.surname}" %></td>
								<td><%= link_to 'Invite', invite_restaurant_table_reservation_path(restaurant_id(@reservation.table_id), @reservation.table_id, @reservation, us) %></td>
							</tr>
							<% end %>
						<% end %>
						</tbody>
					</table>
		      	</div>
		    </div>
		</div>
	</div>



</div>