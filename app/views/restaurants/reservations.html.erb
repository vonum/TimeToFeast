<div class="container">
	<h1> Restaurant <%= "#{@rest.name}" %> </h1>
	<div class="row">
		<div class="col-sm-10">
		    <div class="panel panel-primary">
		      	<div class="panel-heading">Reservations</div>
		      	<div class="panel-body">
		      		<% @tables.each do |table| %>
		    		<table class = "table">
		    			<caption class = "text-left"><%= "Table #{table.id}"%></caption>
						<thead>
							<th>#</th>
							<th>User</th>
							<th>Date</th>
							<th>Time</th>
						</thead>
						<tbody>
						<% table.reservations.each_with_index do |res, idx| %>
							<tr>
								<td><%= idx + 1 %></td>
								<td><%= "#{res.user_id}" %></td> 
								<td><%= "#{res.date}" %></td>
								<td><%= "#{res.start.strftime('%H:%M')} : #{res.finish.strftime('%H:%M')}" %></td>
							</tr>
						<% end %>
						</tbody>
					</table>
					<% end %>
		      	</div>
		    </div>
		</div>
	</div>
<div/>