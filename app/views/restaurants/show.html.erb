<div class="container">
<h1> <%= "#{@rest.name}" %> </h1>

<h3><small> <%= "#{@rest.description}" %> </small></h3>

<div class="col-sm-10">
<div class="panel panel-primary">
   	<div class="panel-heading">Restaurant</div>
	   	<div class="panel-body">
	   		<table class = "table">
				<thead>
					<th>#</th>
					<th>Table ID</th>
					<th>No. seats</th>
				</thead>
				<tbody>
					<% @tables.each_with_index do |table, idx| %>
						<tr>
							<td><%= idx + 1 %></td>
							<td><%= "#{table.id}" %></td> 
							<td><%= "#{table.noseats}" %></td>
							<%#<td><%= link_to 'Edit', edit_restaurant_path(rest) </td>
							<td><%= button_to 'Delete', restaurant_path(rest), method: :delete </td>%>
							<td><%= add_reservation(@rest, table) %></td>
							<td><%= reservations_for_table(@rest, table) %></td>
							<td><%= link_for_destroy_table(@rest, table) %></td>
						</tr>
					<% end %>
				</tbody>
			</table>
		</div>
		<% if manager_signed_in %>
		<%#= link_for_adding_tables(@rest) %>
		<%= link_to 'Add Table',  new_restaurant_table_path(@rest), class: 'btn btn-info'%>
		<% end %>
    </div>
   	</div>

</div>