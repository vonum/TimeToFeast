<div class="container">
	<h1>Edit menu for restaurant <%= "#{@rest.name}" %></h1>
	<div class="row">
		<div class="col-sm-10">
		    <div class="panel panel-primary">
		      	<div class="panel-heading">Meals</div>
		      	<div class="panel-body">
		    		<table class = "table">
						<thead>
							<th>#</th>
							<th>Name</th>
							<th>Description</th>
							<th>Price</th>
						</thead>
						<tbody>
						<% @meals.each_with_index do |meal, idx| %>
							<tr>
								<td><%= idx + 1 %></td>
								<td><%= "#{meal.name}" %></td> 
								<td><%= "#{meal.description}" %></td>
								<td><%= "#{meal.price}" %></td>
								<% if manager_signed_in %>
									<td><%= add_or_delete_meal(@rest, meal) %></td>
								<% end %>
							</tr>
						<% end %>
						</tbody>
					</table>
		      	</div>
		    </div>
		</div>
	</div>
