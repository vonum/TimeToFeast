<div class = "container">
<h1> Edit Restaurant </h1>

<%=  form_for :restaurant, url: restaurant_path(@restaurant), method: :patch do |f| %>
  
  <div class="form-group">
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
  </div>
 
  <div class="form-group">
  <p>
    <%= f.label :description %><br>
    <%= f.text_field :description %>
  </p>
  </div>
  
  <div class="form-group">
  <p>
    <%= f.submit 'Edit', class: 'btn' %>
  </p>
  </div>

<% end %>
</div>