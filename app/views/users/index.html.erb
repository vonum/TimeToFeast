<div class="container">

	<div class="row">
		<div class="col-sm-10">
		    <div class="panel panel-primary">
		      	<div class="panel-heading">Users</div>
		      	<div class="panel-body">
		    		<table class = "table">
						<thead>
							<th>#</th>
							<th>Email</th>
							<th>Name</th>
							<th>Surname</th>						
						</thead>
						<tbody>
						<% @users.each_with_index do |us, idx| %>
							<% unless us.admin %>
							<tr>
								<td><%= idx + 1 %></td>
								<td><%= link_to "#{us.email}", user_path(us) %></td> 
								<td><%= "#{us.name}" %></td>
								<td><%= "#{us.surname}" %></td>
								<% unless !user_signed_in?%>
								<%#<td><%= link_to 'Send request', send_request_friendship_path(us) %>
								<td><%= link_for_user(us) %></td>
								<% end %>
							</tr>
							<% end %>
						<% end %>
						</tbody>
					</table>
		      	</div>
		    </div>
		</div>
	</div>
