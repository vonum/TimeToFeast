<div class="container">
	<div class="row">
		<div class="col-sm-10">
		    <div class="panel panel-primary">
		      	<div class="panel-heading">My Reservations</div>
		      	<div class="panel-body">
		    		<table class = "table">
						<thead>
							<th>#</th>
							<th>Restaurant</th>
							<th>Table</th>
							<th>Date</th>
							<th>Time</th>
						</thead>
						<tbody>
						<% @reservations.each_with_index do |res, idx| %>
							<tr>
								<td><%= idx + 1 %></td>
								<td><%= name_for_restaurant(res.table_id) %></td>
								<td><%= "#{res.table_id}" %></td> 
								<td><%= "#{res.date}" %></td>
								<td><%= "#{res.start.strftime('%H:%M')} : #{res.finish.strftime('%H:%M')}" %></td>
							</tr>
						<% end %>
						</tbody>
					</table>
		      	</div>
		    </div>
		</div>
	</div>
<div/>